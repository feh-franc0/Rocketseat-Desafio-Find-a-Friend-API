// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  COMPANY
}

model Org {
  id            String @id @default(uuid())
  name          String
  address       String
  number        String
  email         String @unique
  password_hash String
  role          Role   @default(COMPANY)
  pets          Pet[]

  @@map("organizations")
}

model Pet {
  id      String  @id @default(uuid())
  name    String?
  breed   String
  age     String
  city    String
  feature String

  org      Org      @relation(fields: [org_id], references: [id])
  org_id   String
  adopteds Boolean? @default(false)

  @@map("pet")
}
